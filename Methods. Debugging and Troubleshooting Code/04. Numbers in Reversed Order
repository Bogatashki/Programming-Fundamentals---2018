using System;

namespace _04._Numbers_in_Reversed_Order
{
    class Program
    {
        static void Main(string[] args)
        {
            string input = (Console.ReadLine()).ToString();
            string autput = numToStringRevers(input);
            Console.WriteLine(autput);
        }

        private static string numToStringRevers(string input)
        {
            string revers = "";
            
            for (int i = input.Length-1; i >= 0 ; i--)
            {
                revers += input[i];
            }
            return revers;
        }
    }
}
